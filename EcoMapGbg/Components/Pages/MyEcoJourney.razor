@page "/journey"

<PageTitle>My Eco Journey - Ecomapgbg</PageTitle>

<div class="text-center mb-5">
    <h1 class="display-4 text-success">🌟 My Eco Journey</h1>
    <p class="lead text-muted">Your sustainable adventure in Gothenburg</p>
</div>

<!-- Progress Section -->
<div class="card eco-card mb-5" style="background: linear-gradient(135deg, #28a745, #20c997); color: white;">
    <div class="card-body text-center p-5">
        <h3 class="mb-4">Journey Progress</h3>
        <div class="display-2 fw-bold mb-3">50%</div>
        <div class="progress mb-4" style="height: 15px;">
            <div class="progress-bar bg-light" style="width: 50%"></div>
        </div>
        <p class="fs-5 mb-0">Keep exploring! 🌱</p>
        <p>Visit more eco places to unlock new badges!</p>
    </div>
</div>

<!-- Achievements -->
<h3 class="text-success mb-4">🏆 Your Achievements</h3>
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card eco-card text-center p-4">
            <div class="display-4 mb-3">🌱</div>
            <h5 class="text-success">Eco Explorer</h5>
            <p class="text-muted">Visited 1 eco place!</p>
            <span class="badge bg-success">✓ Unlocked</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card eco-card text-center p-4">
            <div class="display-4 mb-3">☀️</div>
            <h5 class="text-success">Eco Friend</h5>
            <p class="text-muted">Visited 5 eco places!</p>
            <span class="badge bg-success">✓ Unlocked</span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card eco-card text-center p-4" style="opacity: 0.6;">
            <div class="display-4 mb-3">♻️</div>
            <h5 class="text-muted">Eco Hero</h5>
            <p class="text-muted">Visit 10 eco places!</p>
            <div class="progress mt-3">
                <div class="progress-bar bg-success" style="width: 80%"></div>
            </div>
            <small class="text-muted">8/10</small>
        </div>
    </div>
</div>

<!-- Stats -->
<h3 class="text-success mb-4">📊 Your Impact</h3>
<div class="row g-4">
    <div class="col-md-3">
        <div class="card eco-card text-center p-4">
            <div class="display-4 text-success">12</div>
            <h6 class="text-muted">Places Visited</h6>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card eco-card text-center p-4">
            <div class="display-4 text-success">3</div>
            <h6 class="text-muted">Places Added</h6>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card eco-card text-center p-4">
            <div class="display-4 text-success">150</div>
            <h6 class="text-muted">Eco Points</h6>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card eco-card text-center p-4">
            <div class="display-4 text-success">25</div>
            <h6 class="text-muted">Days Active</h6>
        </div>
    </div>
</div>

