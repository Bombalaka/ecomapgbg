@inherits LayoutComponentBase

<PageTitle>🌱 EcoMapGBG</PageTitle>

<div class="container-fluid px-0">
    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success px-3">
        <a class="navbar-brand" href="/">🌱 EcoMapGBG</a>

        <div class="d-flex flex-grow-1 mx-3">
            <input class="form-control" @bind="searchInput" @bind:event="oninput" placeholder="Sök platser..." />
        </div>

        <button class="btn btn-light" @onclick="NavigateToAdd">➕ Lägg till plats</button>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container mt-4">
        @Body
    </main>
</div>

@code {
    private string searchInput = "";

    private void NavigateToAdd()
    {
        NavigationManager.NavigateTo("/");
    }
}
