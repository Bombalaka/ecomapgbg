@using EcoMapGbg.Models
@typeparam TLocation
@code {
    [Parameter]
    public Location Item { get; set; } = default!;
}

<div class="place-card">
    <h3>@Item.Name</h3>
    <p><strong>Category:</strong> @Item.Type</p>
    <p><strong>Address:</strong> @Item.Address</p>
    <p><strong>Description:</strong> @Item.Description</p>
</div>

